                    <input class="btn btn-outline-info btn-light p-1" type="button" name="toogle" id="lenyitas" value="Összes lenyitása" onclick="osszLenyit();"/>
                    <input class="btn btn-outline-info btn-light p-1" type="button" name="toogle" id="becsukás" value="Összes becsukása" onclick="osszBezar();"/>
